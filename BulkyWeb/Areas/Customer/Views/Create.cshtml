@using static System.Collections.Specialized.BitVector32
@*11-Creating form *@

<div class="card shadow border-0 mt-4 ">
    <div class="card-header bg-secondary bg-gradient modal-lg py-3">
        <div class="row">
            <h2 class="col-12 text-white py-2">Create Category</h2>
        </div>
    </div>
    <div class="card-body p-4" >
        <form method="post" class="row">
            <div class="border p-3 ">
                
                @*         <div asp-validation-summary="ModelOnly"></div>  *@
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>               @* Insert name *@
                    <span asp-validation-for="Name" class="text-danger"></span>   @*14-  Error Message , For Custom error message head to Category Model *@
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" class="form-control border-0 shadow"  />
                    <label asp-for="DisplayOrder" class="ms-2"></label>               @* Insert display order *@
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>   @* Error Message *@

                </div>

                <div class="row p-2">
                    <div class="col-6">
                        <button type="submit" class="btn btn-primary form-control">Create</button>    @* Create button *@
                    </div>
                    <div class="col-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-primary border form-control">
                            @* Back button *@
                            Back to List
                        </a>
                    </div>
                </div>

            </div>
        </form>
    </div>
</div>

@model Category 


        @section Scripts
        {
        @{
        <partial name="_ValidationScriptsPartial" />     //17- Adding reference to partial view or script 
        }
        }
       