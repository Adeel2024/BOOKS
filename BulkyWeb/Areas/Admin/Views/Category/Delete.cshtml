@using static System.Collections.Specialized.BitVector32
@*21- Copied and pasted the code from delete and modified *@
@model Category
<div class="card shadow border-0 my-4 ">
    <div class="card-header bg-secondary bg-gradient modal-lg py-3">
        <div class="row">
            <h2 class="col-12 text-white py-2">Delete Category</h2>
        </div>
    </div>
    <div class="card-body p-4">
        <form method="post">
            <input asp-for="Id" hidden />
            <div class="border p-3 mt-4">
                
                <div class="form-floating py-2 col-12">
                    <input asp-for="Name" disabled class="form-control border-0 shadow" />
                    <label asp-for="Name" class="ms-2"></label>               @* Insert name *@
                    <span asp-validation-for="Name" class="text-danger"></span>   @*14-  Error Message , For Custom error message head to Category Model *@
                </div>
                <div class="form-floating py-2 col-12">
                    <input asp-for="DisplayOrder" disabled class="form-control border-0 shadow" />
                    <label asp-for="DisplayOrder" class="ms-2"></label>               @* Insert display order *@
                    <span asp-validation-for="DisplayOrder" class="text-danger"></span>   @* Error Message *@

                </div>

                <div class="row mt-3">
                    <div class="col-6">
                        <button type="submit" class="btn btn-danger form-control">Delete</button>
                    </div>
                    <div class="col-6">
                        <a asp-controller="Category" asp-action="Index" class="btn btn-outline-secondary border form-control">

                            Back to List
                        </a>
                    </div>
                </div>

            </div>
        </form>
        @* Validation not required for delete , so removed *@
        @* also done some modifications in index.cshtml view ,added asp-route-Id *@
    </div>
</div>



